FoamFile
{
    version 2.0;
    format ascii;
    class dictionary;
    location system;
    object fvSolution;
}

    SIMPLE
    {
        nNonOrthogonalCorrectors 3;
        pRefCell 0;
        pRefValue 0;
        residualControl
        {
            U 1.0E-3;
            p_rgh 1.0E-3;
	        c 0; // This way it never stops...only when we tell it to
	        max_iter 200;
        }

    }

    solvers
    {
	p_rgh
	{
            solver GAMG;
            agglomerator faceAreaPair;
            mergeLevels 1;
            cacheAgglomeration true;
            tolerance 1e-10;
            relTol 0.00;
            smoother GaussSeidel;
	}

        U
        {
            solver smoothSolver;
            smoother GaussSeidel;
            tolerance 1e-10;
            relTol 0;
            minIter 1;
        }

	c
	{
	    solver          PBiCG;
	    preconditioner  DILU;
	    tolerance       1e-10;
	    relTol          0;
	}


    }

    relaxationFactors
    {
        fields
        {
            p_rgh 0.3;
        }

        equations
        {
            U 0.7;
	    c 0.7;
        }

    }
